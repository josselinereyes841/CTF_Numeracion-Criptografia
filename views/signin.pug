    link(rel='stylesheet', href='/css/signin.css')
    link(rel='canonical', href='https://getbootstrap.com/docs/5.0/examples/sign-in/')
    // Bootstrap core CSS
    link(href='../assets/dist/css/bootstrap.min.css', rel='stylesheet')
    style.
      .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
      }
      @media (min-width: 768px) {
      .bd-placeholder-img-lg {
      font-size: 3.5rem;
      }
      }
    // Custom styles for this template
    link(href='signin.css', rel='stylesheet')
  body.text-center
    main.form-signin
      if errors
        each men in errors 
          .alert.alert-dismissible.alert-secondary
            button.btn-close(type='button' data-bs-dismiss='alert')
            strong=men.mensaje
      if sesion 
          .alert.alert-dismissible.alert-secondary
            button.btn-close(type='button' data-bs-dismiss='alert')
            strong=sesion 
      form(action="/signin" method="POST")
        h1.h3.mb-3.fw-normal Please sign in
        .form-floating
          input#floatingInput.form-control(type='email', placeholder='name@example.com', name='nombre', value=nombre)
          label(for='floatingInput') Email address
        .form-floating
          input#floatingPassword.form-control(type='password', placeholder='Password', name='pass', value=pass)
          label(for='floatingPassword') Password
        .checkbox.mb-3
          label
            input(type='checkbox', value='remember-me')
            |  Remember me
        .d-grid.gap-2
          input.btn.btn-outline-primary(type="submit", value='Sign in')
          a.btn.btn-outline-primary(href='/signup', role='button') Sign up
        p.mt-5.mb-3.text-muted &copy; 2023&ndash;Present  
